@model CurrencyEditVM
@{
    ViewData["Title"] = "EditCurrency";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_Layout.cshtml";
}

<div>
    <h5 class="card-title">Editace měny</h5>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="SuperAdmin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="SuperAdmin" asp-controller="Currency" asp-action="CurrencyList">Měna</a></li>
            <li class="breadcrumb-item active"><a asp-area="SuperAdmin" asp-controller="Currency" asp-action="EditCurrency">Editace měny</a></li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body mt-3">
        <!-- Floating Labels Form -->
        <form asp-area="SuperAdmin" asp-controller="Currency" asp-action="EditCurrency" method="post" class="row g-3" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />
            <input type="hidden" asp-for="UpdateDate" />
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="NumericCurrencyCode" type="text" class="form-control" id="floatingName" placeholder="Číselný kód měny">
                    <label asp-for="NumericCurrencyCode">Číselný kód měny</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="CurrencyCode" type="text" class="form-control" id="floatingName" placeholder="Kód měny">
                    <label asp-for="CurrencyCode">Kód měny</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="CurrencyName" type="text" class="form-control" id="floatingName" placeholder="Název měny">
                    <label asp-for="CurrencyName">Název měny</label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label asp-for="IsActive" class="form-check-label" for="flexSwitchCheckDefault">Aktivní/neaktivní</label>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Uložit změny</button>
                <button type="reset" class="btn btn-secondary">Vrátit změny</button>
            </div>
        </form><!-- End floating Labels Form -->
    </div>
</div>