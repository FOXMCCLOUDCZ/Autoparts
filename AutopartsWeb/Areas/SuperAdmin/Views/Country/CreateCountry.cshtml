@model CountryCreateVM
@{
    ViewData["Title"] = "CreateCountry";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_Layout.cshtml";
}

<div>
    <h5 class="card-title">Vytvořit zemi</h5>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="SuperAdmin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="SuperAdmin" asp-controller="Country" asp-action="CountryList">Země</a></li>
            <li class="breadcrumb-item active"><a asp-area="SuperAdmin" asp-controller="Country" asp-action="CreateCountry">Nová země</a></li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body mt-3">
        <!-- Floating Labels Form -->
        <form asp-area="SuperAdmin" asp-controller="Country" asp-action="CreateCountry" method="post" class="row g-3" enctype="multipart/form-data">
            <div class="col-md-4">
                <div class="form-floating">
                    <input asp-for="NumericCountryCode" type="text" class="form-control" id="floatingName" placeholder="Číselný kód země">
                    <label asp-for="NumericCountryCode">Číselný kód země</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-floating">
                    <input asp-for="ISOAlpha2" type="text" class="form-control" id="floatingName" placeholder="ISOAlpha2">
                    <label asp-for="ISOAlpha2">ISOAlpha2</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-floating">
                    <input asp-for="ISOAlpha3" type="text" class="form-control" id="floatingName" placeholder="ISOAlpha3">
                    <label asp-for="ISOAlpha3">ISOAlpha3</label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="CountryNameCZ" type="text" class="form-control" id="floatingName" placeholder="Název (cz)">
                    <label asp-for="CountryNameCZ">Název (cz)</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="CountryNameENG" type="text" class="form-control" id="floatingName" placeholder="Název (eng)">
                    <label asp-for="CountryNameENG">Název (eng)</label>
                </div>
            </div>
            <div class="col-md-12">
                <a asp-area="SuperAdmin" asp-controller="Currency" asp-action="CreateCurrency" class="btn btn-success btn-sm px-2 mb-2" name="Id"><i class="bi bi-plus-lg"></i> Vytvořit měnu</a>
                <select class="form-select" aria-label="Default select example" asp-items=ViewBag.Currency asp-for="CurrencyId">
                    <option selected>Přiřadit měnu</option>
                </select>
            </div>

            <div class="col-md-12">
                <div class="form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label asp-for="IsActive" class="form-check-label" for="flexSwitchCheckDefault">Aktivní/neaktivní</label>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Uložit</button>
                <button type="reset" class="btn btn-secondary">Vymazat data</button>
            </div>
        </form><!-- End floating Labels Form -->
    </div>
</div>